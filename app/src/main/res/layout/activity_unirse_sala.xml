<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232625"
    tools:context=".UnirseSalaActivity">



    <!-- Contenedor principal -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="97dp"
        android:layout_height="96dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/bg_radius"
        android:contentDescription="logo"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_icono"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/containerUnirse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTituloUnirse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unirse a una Sala"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/edtCodigoSala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CÃ³digo de sala"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:backgroundTint="#FFB46A"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btnUnirse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unirse"
            android:backgroundTint="#FFB46A"
            android:textColor="#232625"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:backgroundTint="#AAAAAA"
            android:textColor="#FFFFFF"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
