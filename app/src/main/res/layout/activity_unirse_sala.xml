<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232625">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_icono"
        android:background="@drawable/bg_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Botón salir -->
    <ImageView
        android:id="@+id/exit"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_exit"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Contenido -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unirse a Sala"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Nombre sala -->
        <EditText
            android:id="@+id/etNombreSalaUnirse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la sala"
            android:padding="12dp"
            android:background="@drawable/bg_input"
            android:textColorHint="#D7D7D7"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <!-- Contraseña -->
        <EditText
            android:id="@+id/etPasswordSalaUnirse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="@drawable/bg_input"
            android:textColorHint="#D7D7D7"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp"/>

        <!-- Botón unirse -->
        <Button
            android:id="@+id/btnUnirseSalaConfirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unirse"
            android:textColor="#232625"
            android:textStyle="bold"
            android:backgroundTint="#FFB46A"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>