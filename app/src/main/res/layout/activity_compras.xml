<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1C1C1C">

    <!-- Contenido arriba -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_icono"
        android:background="@drawable/bg_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Botón salir -->
    <ImageView
        android:id="@+id/exit"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="-90dp"
        android:src="@drawable/ic_exit" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título -->
            <TextView
                android:id="@+id/txtListaCompras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:text="Lista de Compras"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Campo para añadir nuevo ítem -->
            <EditText
                android:id="@+id/etNuevoItem"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Añadir nuevo ítem..."
                android:background="@drawable/bg_input"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#D7D7D7"
                android:layout_marginBottom="16dp"
                android:inputType="textCapSentences" />

            <!-- Botón para agregar nuevo ítem -->
            <Button
                android:id="@+id/btnAgregarAccesorio"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/bg_radius"
                android:contentDescription="Agregar"
                android:padding="1dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_agregar"
                android:layout_marginBottom="20dp"/>

            <!-- RecyclerView para la lista de ítems de compra -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" /> <!-- Importante para ScrollView -->

            <!-- Los CheckBox de ejemplo y TextViews de Persona 2 y 3 se pueden eliminar o mantener como marcadores de posición si no son dinámicos -->
            <!-- Si quieres que "Persona 1 - Nombre", "Persona 2 - Nombre" sean dinámicos, necesitarías otra estructura de datos y RecyclerViews anidados o lógicas más complejas. -->
            <!-- Por ahora, los mantengo comentados o eliminados para simplificar la lista dinámica de ítems. -->

